# ============================================
# 数据库配置
# ============================================
DATABASE_URL="postgresql://pve_user:your_secure_password@localhost/pve_manager"

# ============================================
# JWT 认证配置
# ============================================
# 使用以下命令生成安全密钥: openssl rand -base64 64
JWT_SECRET="your-very-secure-jwt-secret-key-minimum-32-characters"

# ============================================
# 应用配置
# ============================================
NODE_ENV="production"
PORT=5000
NEXT_PUBLIC_APP_NAME="PVE Manager"
NEXT_PUBLIC_APP_URL="https://your-domain.com"

# ============================================
# PVE API 配置（可选）
# ============================================
# 这些配置可以在管理员后台中动态配置
# PVE_API_URL="https://your-pve-server:8006"
# PVE_API_USER="root@pam"
# PVE_API_PASSWORD="your-pve-password"
# PVE_API_TOKEN_ID="token-name"
# PVE_API_TOKEN_VALUE="token-secret"

# ============================================
# 会话配置
# ============================================
# JWT 过期时间（天）
JWT_EXPIRES_IN="7d"

# ============================================
# 文件上传配置
# ============================================
# 最大文件大小（MB）
MAX_FILE_SIZE=10

# ============================================
# 日志配置
# ============================================
# 日志级别: error, warn, info, debug
LOG_LEVEL="info"

# ============================================
# 安全配置
# ============================================
# CORS 允许的源（多个用逗号分隔）
CORS_ORIGINS="https://your-domain.com"

# ============================================
# 备份配置
# ============================================
# 备份保留天数
BACKUP_RETENTION_DAYS=30
